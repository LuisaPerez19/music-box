
<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
      <%= form_tag instruments_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find an instrument"
        %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="container py-4">
  <div class="row">
    <% @instruments.each do |instrument|%>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <div class="bg-white rounded shadow h-100">
          <%= link_to instrument_path(instrument), class:"text-decoration-none" do %>
            <% if instrument.photos.attached? %>
              <%= cl_image_tag instrument.photos.first.key, width: 296, crop: :fill, class: "instrument-img img-fluid" %>
            <% end %>
            <div class="p-2 rounded-bottom">
              <strong class="name-color"><%= instrument.name %></strong>
              <small class="text-muted">Â£<%= instrument.price %>/day</small>
            </div>
          <% end %>
        </div>
      </div>
    <% end  %>
  </div>
</div>
