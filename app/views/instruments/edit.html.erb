<div class="container py-5">
<div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
    <div class="bg-white rounded p-3 shadow">
        <h3>Edit the instrument </h3>
        <div class="row">
        <div class="col-12">
            <%= simple_form_for @instrument do |f| %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :price %>
            <%= f.file_field :photo_url, class: 'form-control' %>
            <%= f.submit class: "btn btn-primary mt-4" %>
            <% end %>
<br>
            <%= link_to 'Back to Instruments', edit_instrument_path(@instrument.id), class: 'btn btn-secondary' %>
        </div>
        </div>
