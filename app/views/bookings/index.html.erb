<div>
  <h2 id="bookings-title">Bookings & Instruments</h2>

<div class="container py-5">
  <% @bookings.each do |booking| %>
  <div class= "card mt-4">
    <div class="row">

      <div class="col-md-4">
        <%= cl_image_tag booking.instrument.photos.first.key, width: 296, crop: :fill, class: "instrument-img img-fluid" %>
      </div>

      <div class="col-md-8">
        <p>Instrument: <%= booking.instrument.name %></p>
        <p>Start Date: <%= booking.start_date %></p>
        <p>End Date: <%= booking.end_date %></p>
      </div>

    </div>
  </div>
  <% end %>
</div>



<%= link_to "Homepage", root_path, class: "btn btn-success" %>



</div>
